{
  "name": "mta-project",
  "version": "0.0.1",
  "description": "Build and deployment scripts",
  "scripts": {
    "clean": "rimraf resources mta_archives mta-op*",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "undeploy": "cf undeploy c24c313_2 --delete-services --delete-service-keys --delete-service-brokers"
  },
  "devDependencies": {
    "mbt": "^1.2.27",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "@sap/ux-ui5-tooling": "^1.17.3",
    "fiori-tools": "^1.3.0"
  }
}
