<mvc:View   controllerName="com.logaligroup.employees.controller.OrderDetails"
            xmlns="sap.m"
            xmlns:uxap="sap.uxap"
            xmlns:mvc="sap.ui.core.mvc"
            xmlns:upload="sap.m.upload"
            xmlns:signature="com.logaligroup.employees.control">

        <uxap:ObjectPageLayout>
        
            <uxap:headerTitle>

                <uxap:ObjectPageDynamicHeaderTitle>

                    <uxap:expandedHeading>

                        <HBox>
                            <Title text="{i18n>customerID} : {northwind>CustomerID}"/> 
                        </HBox>
                    
                    </uxap:expandedHeading>

                    <uxap:snappedHeading>
                        <HBox>
                            <Title text="{i18n>customerID} : {northwind>CustomerID}"/> 
                        </HBox>
                    </uxap:snappedHeading>

                    <uxap:expandedContent>
                        <Text text="{i18n>OrderID}: {northwind>OrderID}"/>
                    </uxap:expandedContent>

                    <uxap:snappedContent>
                        <Text text="{i18n>OrderID}: {northwind>OrderID}"/>
                    </uxap:snappedContent>
                
                </uxap:ObjectPageDynamicHeaderTitle>
            
            
            </uxap:headerTitle>


            <uxap:headerContent>

                <FlexBox justifyContent="SpaceBetween">

                    <HBox class="sapUiSmallMarginEnd">

                        <VBox>

                            <Label text="{i18n>orderDate}: " class="boldElement"/>
                            <Text text="{
                                path: 'northwind>OrderDate',
                                type: 'sap.ui.model.type.Date'
                            }"/>
                        
                        </VBox>
                    
                    </HBox>

                    <HBox class="sapUiSmallMarginEnd">

                        <VBox>

                            <Label text="{i18n>freight}:" class="boldElement"/>
                            <Text text="{northwind>Freight}"/>
                        
                        </VBox>
                    
                    </HBox>

                    <HBox>

                        <VBox>
                            <Label text="{i18n>shipName}:" class="boldElement"/>
                            <Text text="{northwind>ShipName}"/>
                        </VBox>
                    
                    </HBox>

                </FlexBox>
            
            </uxap:headerContent>


            <uxap:sections>

                <uxap:ObjectPageSection title="{i18n>signature}">

                    <uxap:subSections>

                        <uxap:ObjectPageSubSection>
                        
                            <uxap:blocks>
                            
                                <FlexBox width="100%"
                                        alignItems="Center"
                                        justifyContent="Center"
                                        direction="Column">

                                    <FlexBox width="300px"
                                            height="150px">
                                        <signature:Signature id="signature"/>        
                                    </FlexBox>

                                    <HBox class="sapUiTinyMarginTop"
                                            justifyContent="Center"
                                            width="302px">

                                        <Button
                                                class="sapUiSmallMarginEnd"
                                                type="Accept"
                                                text="{i18n>save}"
                                                press="onSavePress"
                                                width="4rem"/>

                                        <Button
                                                class="sapUiSmallMarginEnd"
                                                text="{i18n>clear}"
                                                type="Reject"
                                                press="onClearPress"
                                                width="4rem"/>

                                        <Button
                                                text="{i18n>refresh}"
                                                type="Emphasized"
                                                press="onRefreshPress"
                                                width="4rem"/>


                                    
                                    </HBox>
                                
                                </FlexBox>
                            
                            </uxap:blocks>
                        
                        </uxap:ObjectPageSubSection>
                    
                    </uxap:subSections>
                
                </uxap:ObjectPageSection>

                <uxap:ObjectPageSection title="{i18n>attachment}">

                    <uxap:subSections>

                        <uxap:ObjectPageSubSection>
                        
                            <uxap:blocks>

                                <upload:UploadSet id="upload"
                                                uploadUrl="/sap/opu/odata/sap/YSAPUI5_SRV_01/FilesSet"
                                                beforeUploadStarts="onBeforeUpload"
                                                uploadCompleted="onUploadCompleted"
                                                afterItemRemoved="onAfterItemDelete">
                                 </upload:UploadSet>
                            
                            </uxap:blocks>
                        
                        </uxap:ObjectPageSubSection>
                    
                    </uxap:subSections>
                
                </uxap:ObjectPageSection>



            </uxap:sections>
        
        </uxap:ObjectPageLayout>


</mvc:View>