<mvc:View
	controllerName="com.logaligroup.employees.controller.Container"
    xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc">


	<f:FlexibleColumnLayout id="container-fcl"
						layout="{view>/layout}">

		<f:beginColumnPages>
			<mvc:XMLView id="master"
						viewName="com.logaligroup.employees.view.Master"
						type="XML"/>
		</f:beginColumnPages>

		<f:midColumnPages>
			<mvc:XMLView
						id="details"
						viewName="com.logaligroup.employees.view.Details"
						type="XML"/>
		</f:midColumnPages>

		<f:endColumnPages>
			<mvc:XMLView
						id="orderDetails"
						viewName="com.logaligroup.employees.view.OrderDetails"
						type="XML"/>
		</f:endColumnPages>


	</f:FlexibleColumnLayout>

</mvc:View>